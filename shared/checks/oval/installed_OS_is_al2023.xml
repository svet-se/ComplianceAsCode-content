<def-group>
  <definition class="inventory" id="installed_OS_is_al2023" version="3">
    <metadata>
      <title>Amazon Linux 2023</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <reference ref_id="cpe:/o:al:2023" source="CPE" />
      <description>The operating system installed on the system is Amazon Linux 2023</description>
    </metadata>
    <criteria comment="current OS is 2023" operator="AND">
      <extend_definition comment="Installed OS is part of the Unix family" definition_ref="installed_OS_is_part_of_Unix_family" />
      <criterion comment="Amazon Linux is installed" test_ref="test_al" />
      <criterion comment="Amazon Linux 2023 is installed" test_ref="test_al2023" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/al exists" id="test_al" version="1">
    <unix:object object_ref="obj_al" />
  </unix:file_test>
  <unix:file_object comment="check /etc/al file" id="obj_al" version="1">
    <unix:filepath>/etc/al</unix:filepath>
  </unix:file_object>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="Check Custom OS version" id="test_al2023" version="1">
    <ind:object object_ref="obj_al2023" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_al2023" version="1" comment="Check Amazon Linux version">
    <ind:filepath>/etc/al</ind:filepath>
    <ind:pattern operation="pattern match">^2023.[0-9]+$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
