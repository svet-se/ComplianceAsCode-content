{{%- macro kubernetes_machine_config(PATH='', MODE='') -%}}
apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
spec:
  config:
    ignition:
      version: 2.2.0
    storage:
      files:
      - contents:
          source: data:,{{{ url_encode() }}}
        filesystem: root
        mode: {{{ MODE }}}
        path: {{{ PATH }}}
{{%- endmacro -%}}
