# platform = multi_platform_all
# reboot = false
# strategy = restrict
# complexity = low
# disruption = low

- name: Ensure {{{ OPTION }}} is enabled in /etc/sudoers
  lineinfile:
    path: /etc/sudoers
    regexp: '^(?!#)[\s]*Defaults.*[\s]+{{{ OPTION }}}[\s]*.*$'
    line: 'Defaults {{{ OPTION }}}'
    validate: /usr/sbin/visudo -cf /etc/sudoers
