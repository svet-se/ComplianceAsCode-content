# platform = multi_platform_all
# reboot = false
# strategy = configure
# complexity = low
# disruption = low

- name: Find {{{ PATH }}} file(s)
  find:
    paths: "{{ '{{{ PATH }}}' | dirname }}"
    patterns: "{{ '{{{ PATH }}}' | basename }}"
  register: files_found
  tags:
    @ANSIBLE_TAGS@

- name: Set permissions
  file:
    path: "{{ item.path }}"
    mode: {{{ MODE }}}
  with_items:
    - "{{ files_found.files }}"
  tags:
    @ANSIBLE_TAGS@

