  comment="Compare {{{ FILE_ID }}}.rules file in /etc/audit/rules.d against file in /usr/share/audit/sample-rules/"
  id="test_compare_{{{ FILE_ID }}}" version="1">
    <ind:object object_ref="object_etc_{{{ FILE_ID }}}" />
    <ind:state state_ref="state_sample_{{{ FILE_ID }}}" />
