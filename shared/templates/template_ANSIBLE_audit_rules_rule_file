- name: Copy the /usr/share/sample-rules/{{{ FILE_ID }}}.rules into /etc/audit/rules.d/
  copy:
    src: /usr/share/audit/sample-rules/{{{ FILE_ID }}}.rules
    dest: /etc/audit/rules.d/{{{ FILE_ID }}}.rules
    force: yes
    remote_src: yes
