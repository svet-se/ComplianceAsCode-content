<def-group>
  <definition class="compliance" id="{{{ _RULE_ID }}}" version="1">
    <metadata>
      <title>Ensure that zIPL boot loader is configured to run Linux operating system with argument {{{ ARG_NAME }}}={{{ ARG_VALUE }}}</title>
      {{{- oval_affected(products) }}}
      <description>Ensure {{{ ARG_NAME }}}={{{ ARG_VALUE }}} option is configured in the 'options' line in /boot/loader/entries/*.conf. Make sure that newly installed kernels will retain {{{ ARG_NAME }}}={{{ ARG_VALUE }}}, it should be configured in /etc/kernel/cmdline as well.</description>
    </metadata>
    <criteria operator="AND">
      {{{- oval_argument_in_file_criterion('/boot/loader/entries/*.conf', ARG_NAME, ARG_VALUE, 'Linux kernel') }}}
      {{{- oval_argument_in_file_criterion('/etc/kernel/cmdline', ARG_NAME, ARG_VALUE, 'Linux kernel') }}}
    </criteria>
  </definition>

  {{{- oval_argument_in_file_test('/boot/loader/entries/*.conf', ARG_NAME, ARG_VALUE, 'options ') }}}
  {{{- oval_argument_in_file_test('/etc/kernel/cmdline', ARG_NAME, ARG_VALUE) }}}
</def-group>
