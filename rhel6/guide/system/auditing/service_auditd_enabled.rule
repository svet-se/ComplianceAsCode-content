    nist: AC-17(1),AU-1(b),AU-10,AU-12(a),AU-12(c),IR-5
    pcidss: Req-10
    srg: SRG-OS-000255,SRG-OS-000032,SRG-OS-000037
    stigid: RHEL-06-000145

ocil: '{{{ sysv_service_enabled(service="auditd") }}}'
