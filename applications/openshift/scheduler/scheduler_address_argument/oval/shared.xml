<def-group>
  <definition class="compliance" id="scheduler_address_argument" version="1">
    <metadata>
      <title>Configure the Scheduler Service Network Address</title>
      <affected family="unix">
        <platform>multi_platform_ocp</platform>
      </affected>
      <description>Scheduler network address should be configured to the loopback address.</description>
    </metadata>
    <criteria operator="AND">
      <extend_definition comment="Runtime configuration is correct" definition_ref="ocp_service_runtime_config_scheduler_address_argument" />
      <criterion comment="scheduler network address is configured" test_ref="test_scheduler_address_argument" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="scheduler network address is configured" id="test_scheduler_address_argument" version="1">
    <ind:object object_ref="object_scheduler_address_argument" />
    <ind:state state_ref="state_scheduler_address_argument" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_scheduler_address_argument" version="1">
    <ind:filepath>/etc/origin/master/master-config.yaml</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*kubernetesMasterConfig\:(?:[^\n]*\n+)+?[\s]*schedulerArguments\:(?:[^\n]*\n+)+?[\s]*address\:[\s]*[\n]+[\s]*-[\s]+(\S+)[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_scheduler_address_argument" version="1">
    <ind:subexpression datatype="string" operation="pattern match">^127.0.0.1$</ind:subexpression>
  </ind:textfilecontent54_state>
</def-group>
