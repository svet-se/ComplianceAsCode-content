<def-group>
  <definition class="compliance" id="keystone_file_ownership" version="1">
    <metadata>
      <title>Verify ownership of files in /etc/keystone/ </title>
      <affected family="unix">
        <platform>multi_platform_rhel</platform>
      </affected>
      <description>This test makes sure that config files in /etc/keystone/ are owned by keystone:keystone</description>
    </metadata>
    <criteria operator="OR">
      <criterion test_ref="test_etc_openstack_keystone_settings_cinder_conf" />
      <criterion test_ref="test_etc_openstack_keystone_settings_api_paste_ini" />
      <criterion test_ref="test_etc_openstack_keystone_settings_policy_json" />
      <criterion test_ref="test_etc_openstack_keystone_settings_rootwrap_conf" />
      <criterion test_ref="test_etc_openstack_keystone_settings_signing_cert_pem" />
      <criterion test_ref="test_etc_openstack_keystone_settings_signing_key_pem" />
      <critetion test_ref="test_etc_openstack_keystone_settings_ca_pem" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/keystone/keystone.conf mode and ownership" id="test_etc_openstack_keystone_settings_keystone_conf" version="1">
    <unix:object object_ref="object_etc_openstack_keystone_settings_cinder_conf" />
    <unix:state state_ref="_etc_openstack_keystone_file_owner" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/keystone/keystone-paste.ini mode and ownership" id="test_etc_openstack_keystone_settings_keystone_paste_ini" version="1">
    <unix:object object_ref="object_etc_openstack_keystone_settings_keystone_paste_ini" />
    <unix:state state_ref="_etc_openstack_keystone_file_owner" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/keystone/policy.json mode and ownership" id="test_etc_openstack_keystone_settings_policy_json" version="1">
    <unix:object object_ref="object_etc_openstack_keystone_settings_policy_json" />
    <unix:state state_ref="_etc_openstack_keystone_file_owner" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/keystone/logging.conf mode and ownership" id="test_etc_openstack_keystone_settings_logging_conf" version="1">
    <unix:object object_ref="object_etc_openstack_keystone_settings_logging_conf" />
    <unix:state state_ref="_etc_openstack_keystone_file_owner" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/keystone/ssl/certs/signing_cert.pem mode and ownership" id="test_etc_openstack_keystone_settings_signing_cert_pem" version="1">
    <unix:object object_ref="object_etc_openstack_keystone_settings_signing_cert_pem" />
    <unix:state state_ref="_etc_openstack_keystone_file_owner" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/keystone/ssl/private/signing_key.pem mode and ownership" id="test_etc_openstack_keystone_settings_signing_key_pem" version="1">
    <unix:object object_ref="object_etc_openstack_keystone_settings_signing_key_pem" />
    <unix:state state_ref="_etc_openstack_keystone_file_owner" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/keystone/ssl/certs/ca.pem mode and ownership" id="test_etc_openstack_keystone_settings_ca_pem" version="1">
    <unix:object object_ref="object_etc_openstack_keystone_settings_ca_pem" />
    <unix:state state_ref="_etc_openstack_keystone_file_owner" />
  </unix:file_test>

  <unix:file_object comment="/etc/keystone/keystone.conf" id="object_etc_openstack_keystone_settings_keystone_conf" version="1">
    <unix:filepath>/etc/keystone/keystone.conf</unix:filepath>
  </unix:file_object>

  <unix:file_object comment="/etc/keystone/keystone-paste.ini" id="object_etc_openstack_keystone_settings_keystone_paste_ini" version="1">
    <unix:filepath>/etc/keystone/keystone-paste.ini</unix:filepath>
  </unix:file_object>

  <unix:file_object comment="/etc/keystone/policy.json" id="object_etc_openstack_keystone_settings_policy_json" version="1">
    <unix:filepath>/etc/keystone/policy.json</unix:filepath>
  </unix:file_object>

  <unix:file_object comment="/etc/keystone/logging.conf" id="object_etc_openstack_keystone_settings_logging_conf" version="1">
    <unix:filepath>/etc/keystone/logging.conf</unix:filepath>
  </unix:file_object>

  <unix:file_object comment="/etc/keystone/signing_cert.pem" id="object_etc_openstack_keystone_settings_signing_cert_pem" version="1">
    <unix:filepath>/etc/keystone/ssl/certs/signing_cert.pem</unix:filepath>
  </unix:file_object>

  <unix:file_object comment="/etc/keystone/signing_key.pem" id="object_etc_openstack_keystone_settings_signing_key_pem" version="1">
    <unix:filepath>/etc/keystone/ssl/private/signing_key.pem</unix:filepath>
  </unix:file_object>

  <unix:file_object comment="/etc/keystone/ca.pem" id="object_etc_openstack_keystone_settings_ca_pem" version="1">
    <unix:filepath>/etc/keystone/ssl/certs/ca.pem</unix:filepath>
  </unix:file_object>

  <ind:textfilecontent54_object id="object_etc_group_keystone_gid" comment="GID: keystone" version="1">
    <ind:filepath>/etc/group</ind:filepath>
    <ind:pattern operation="pattern match">^(?!\s*#)keystone:.+:(\d+):</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object id="object_etc_group_keystone_uid" comment="UID: keystone" version="1">
    <ind:filepath>/ect/passwd</ind:filepath>
    <ind:pattern operation="pattern match">^(?!\s*#)keystone:.+:(\d+):</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <unix:file_state id="_etc_group_keystone_file_owner" version="1">
    <unix:group_id datatype="int" var_ref="object_etc_group_keystone_gid_var"/>
    <unix:user_id datatype="int" var_ref="object_etc_group_keystone_uid_var"/>
  </unix:file_state>

  <variables>
    <local_variable id="object_etc_group_keystone_gid_var" version="1" datatype="int" comment="GID: keystone">
      <object_component object_ref="id=object_etc_group_keystone_gid" item_field="subexpression"/>
    </local_variable>
    <local_variable id="object_etc_group_keystone_uid_var" version="1" datatype="int" comment="UID: keystone">
      <object_component object_ref="id=object_etc_group_keystone_uid" item_field="subexpression"/>
    </local_variable>
  </variables>
</def-group>
