<def-group>
  <definition class="compliance" id="horizon_file_ownership" version="1">
    <metadata>
      <title>Verify ownership of files in /etc/openstack-dashboard/ </title>
      <affected family="unix">
        <platform>multi_platform_rhel</platform>
      </affected>
      <description>This test makes sure that config files in /etc/openstack-dashboard/ are owned by root:cinder</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_etc_openstack_horizon_settings_local_settings" />
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/openstack-dashboard/local_settings mode and ownership" id="test_etc_openstack_horizon_settings_local_settings" version="1">
    <unix:object object_ref="object_etc_openstack_horizon_settings_local_settings" />
    <unix:state state_ref="_etc_openstack_cinder_file_owner" />
  </unix:file_test>

  <unix:file_object comment="/etc/openstack-dashboard/local_settings" id="object_etc_openstack_horizon_settings_local_settings" version="1">
    <unix:filepath>/etc/openstack-dashboard/local_settings</unix:filepath>
  </unix:file_object>

  <ind:textfilecontent54_object id="object_etc_group_horizon" comment="GID: horizon" version="1">
    <ind:filepath>/etc/group</ind:filepath>
    <ind:pattern operation="pattern match">^(?!\s*#)horizon:.+:(\d+):</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <unix:file_state id="_etc_group_horizon_file_owner" version="1">
	 <unix:group_id datatype="int" var_ref="object_etc_group_horizon_var"/>
	 <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>

  <variables>
    <local_variable id="object_etc_group_horizon_var" version="1" datatype="int" comment="GID: cinder">
      <object_component object_ref="id=object_etc_group_horizon" item_field="subexpression"/>
    </local_variable>
  </variables>
</def-group>
