<def-group>
  <definition class="compliance" id="{{{ rule_id }}}" version="1">
    {{{ oval_metadata("Ensure that timesyncd is enabled and configured") }}}
    <criteria comment="Timesyncd servers are configured" operator="AND">
      <criterion test_ref="{{{ rule_id }}}_test_systemd_timesyncd_service_enabled" />
      <criteria comment="Timesyncd is enabled and configured" operator="AND">
        <criteria comment="Timesyncd is enabled and configured" operator="OR">
          <criterion test_ref="{{{ rule_id }}}_test_systemd_timesyncd_master_ntp_configuration" />
          <criterion test_ref="{{{ rule_id }}}_test_systemd_timesyncd_dropin_ntp_configuration" />
        </criteria>
        <criteria comment="Timesyncd is enabled and configured" operator="OR">
          <criterion test_ref="{{{ rule_id }}}_test_systemd_timesyncd_master_distance_configuration" />
          <criterion test_ref="{{{ rule_id }}}_test_systemd_timesyncd_dropin_distance_configuration" />
        </criteria>
      </criteria>
    </criteria>
  </definition>

  <external_variable comment="remote vendor-approved pool servers" datatype="string"
   id="var_multiple_time_servers" version="1" />

  <local_variable id="{{{ rule_id }}}_variable_test_servers" datatype="string" version="1"
    comment="a local variable which includes all vendor-approved pool servers">
      <concat>
          <literal_component>^[[:space:]]*(NTP|FallbackNTP)[[:space:]]*=[[:space:]]*</literal_component>
          <split delimiter=",">
              <variable_component var_ref="var_multiple_time_servers" />
          </split>
          <literal_component>.*$</literal_component>
      </concat>
  </local_variable>

  <linux:systemdunitproperty_state id="{{{ rule_id }}}_ste_timesyncd_is_enabled" version="1">
    <linux:value>enabled</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_object id="{{{ rule_id }}}_obj_timesyncd-service_unitfilestate" version="1">
    <linux:unit>systemd-timesyncd.service</linux:unit>
    <linux:property>UnitFileState</linux:property>
  </linux:systemdunitproperty_object>

  <linux:systemdunitproperty_test check="all" id="{{{ rule_id }}}_test_systemd_timesyncd_service_enabled" version="1"
    comment="systemd timesyncd.service enabled">
    <linux:object object_ref="{{{ rule_id }}}_obj_timesyncd-service_unitfilestate" />
    <linux:state state_ref="{{{ rule_id }}}_ste_timesyncd_is_enabled" />
  </linux:systemdunitproperty_test>

  <ind:textfilecontent54_object comment="Ensure at least one NTP server is set"
    id="{{{ rule_id }}}_object_systemd_timesyncd_master_configuration" version="1">
    <ind:filepath>/etc/systemd/timesyncd.conf</ind:filepath>
    <ind:pattern operation="pattern match" var_ref="{{{ rule_id }}}_variable_test_servers"/>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object comment="Ensure at least one NTP server is set"
    id="{{{ rule_id }}}_object_systemd_timesyncd_dropin_configuration" version="1">
    <ind:path>/etc/systemd/timesyncd.d</ind:path>
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match" var_ref="{{{ rule_id }}}_variable_test_servers"/>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object comment="Ensure NTP server distance is set"
    id="{{{ rule_id }}}_object_systemd_timesyncd_dropin_distance_configuration" version="1">
    <ind:path>/etc/systemd/timesyncd.d</ind:path>
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^\s*RootDistanceMax=\d+</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object comment="Ensure NTP server distance is set"
    id="{{{ rule_id }}}_object_systemd_timesyncd_master_distance_configuration" version="1">
    <ind:filepath>/etc/systemd/timesyncd.conf</ind:filepath>
    <ind:pattern operation="pattern match">^\s*RootDistanceMax=\d+</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" version="1"
    comment="Ensure NTP servers are configured in master configuration file"
    id="{{{ rule_id }}}_test_systemd_timesyncd_master_ntp_configuration">
    <ind:object object_ref="{{{ rule_id }}}_object_systemd_timesyncd_master_configuration" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" version="1"
    comment="Ensure NTP root distance is configured in master configuration file"
    id="{{{ rule_id }}}_test_systemd_timesyncd_master_distance_configuration">
    <ind:object object_ref="{{{ rule_id }}}_object_systemd_timesyncd_master_distance_configuration" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" version="1"
    comment="Ensure NTP servers are configured in dropin configuration file"
    id="{{{ rule_id }}}_test_systemd_timesyncd_dropin_ntp_configuration">
    <ind:object object_ref="{{{ rule_id }}}_object_systemd_timesyncd_dropin_configuration" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" version="1"
    comment="Ensure NTP root distance is configured in dropin configuration file"
    id="{{{ rule_id }}}_test_systemd_timesyncd_dropin_distance_configuration">
    <ind:object object_ref="{{{ rule_id }}}_object_systemd_timesyncd_dropin_distance_configuration" />
  </ind:textfilecontent54_test>

</def-group>
