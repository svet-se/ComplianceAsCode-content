<def-group>
  <definition class="compliance" id="{{{ rule_id }}}" version="1">
    {{{ oval_metadata("'Ensure sudo timestamp_timeout is appropriate - sudo timestamp_timeout") }}}
    <criteria comment="The timestamp_timeout should be configured"  operator="AND">
      <criterion comment="check sudo package is installed" test_ref="test_sudo_package_is_installed" />
      <criterion comment="check configuration in /etc/sudoers" test_ref="test_sudo_timestamp_timeout" />
    </criteria>
  </definition>

  <!-- Define 1st test for sudo package.  -->
  <linux:rpminfo_test check="all" check_existence="only_one_exists" comment="check correct package is installed" id="test_sudo_package_is_installed" version="1">
    <linux:object object_ref="obj_sudo_package_is_installed"/>
  </linux:rpminfo_test>
  
  <!-- Define 2nd test for sudo timestamp. -->
  <ind:textfilecontent54_test check="all" check_existence="only_one_exists" comment="check correct configuration in /etc/sudoers" id="test_sudo_timestamp_timeout" version="1">
    <ind:object object_ref="obj_sudo_timestamp_timeout"/>
  </ind:textfilecontent54_test>

  <linux:rpminfo_object id="obj_sudo_package_is_installed" version="1">
    <linux:name datatype="string" operation="equals">sudo</linux:name>
  </linux:rpminfo_object>

  <ind:textfilecontent54_object id="obj_sudo_timestamp_timeout" version="1">
     <ind:filepath operation="pattern match">^/etc/sudoers(\.d/.*)?$</ind:filepath>  
    <ind:pattern operation="pattern match">^[\s]*Defaults[\s]*timestamp_timeout[\s]*=\s*[0-9]+$</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
