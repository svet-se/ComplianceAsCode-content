<def-group>
  <definition class="compliance" id="{{{ rule_id }}}" version="1">
      {{{ oval_metadata("Enforce all AppArmor Profiles") }}}
    <criteria comment="Enforce all AppArmor Profiles" operator="AND">
      <criterion comment="Apparmor profiles are loaded" test_ref="test_profiles_are_loaded" />
      <criterion comment="No profiles are in complain mode." test_ref="test_profiles_are_in_enforce_mode" />
      <criterion comment="No processes which are unconfined." test_ref="test_processes_are_confined" />
    </criteria>      
  </definition>

    <!-- Define 1st test for all apparmor profiles. -->
  <linux:apparmorstatus_test id="test_profiles_are_loaded" version="1"
    check="all" check_existence="at_least_one_exists"
    comment="Verify that profiles are loaded" >
    <linux:object object_ref="object_apparmor_profiles_existing" /> 
    <linux:state state_ref="apparmor_profiles_are_loaded" />
  </linux:apparmorstatus_test>

  <!-- Define 2nd test for all apparmor profiles. -->
  <linux:apparmorstatus_test id="test_profiles_are_in_enforce_mode" version="1"
    check="all" check_existence="at_least_one_exists"
    comment="Zero profiles are in complain mode" >
    <linux:object object_ref="object_apparmor_profiles_existing" /> 
    <linux:state state_ref="no_apparmor_profiles_in_complian_mode" />
  </linux:apparmorstatus_test>

  <!-- Define "3rd" test for processes. -->
  <linux:apparmorstatus_test id="test_processes_are_confined" version="1"
    check="all" check_existence="at_least_one_exists"
    comment="Zero processes are unconfined" >
    <linux:object object_ref="object_apparmor_profiles_existing" /> 
    <linux:state state_ref="no_unconfined_processes" />
  </linux:apparmorstatus_test>

  <linux:apparmorstatus_object id="object_apparmor_profiles_existing" version="1" />
    
  <linux:apparmorstatus_state id="apparmor_profiles_are_loaded" version="1"
    comment="Apparmor profiles are loaded">
    <linux:loaded_profiles_count operation="greater than" datatype="int">0</linux:loaded_profiles_count>
  </linux:apparmorstatus_state>

  <linux:apparmorstatus_state id="no_apparmor_profiles_in_complian_mode" version="1"
    comment="No loaded profiles in complian mode">
    <linux:complain_mode_profiles_count operation="not equal" datatype="int">0</linux:complain_mode_profiles_count>
  </linux:apparmorstatus_state>

  <linux:apparmorstatus_state id="no_unconfined_processes" version="1"
    comment="No unconfined processes">
    <linux:unconfined_processes_with_profiles_count operation="not equal" datatype="int">0</linux:unconfined_processes_with_profiles_count>
  </linux:apparmorstatus_state>

</def-group>